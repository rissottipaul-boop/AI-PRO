{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "pip install -e .[dev]",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "pytest -q --cov=src/autonomous_dev --cov-fail-under=85",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run Lint",
      "type": "shell",
      "command": "ruff check . && ruff format --check . && mypy src/autonomous_dev",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Format Code",
      "type": "shell",
      "command": "ruff check --fix . && ruff format . && black .",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Pre-commit",
      "type": "shell",
      "command": "pre-commit run --all-files",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run All Checks",
      "type": "shell",
      "command": "ruff check . && ruff format --check . && mypy src/autonomous_dev && pytest -q",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
