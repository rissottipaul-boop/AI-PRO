{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Auto-Fix All Problems",
            "type": "shell",
            "command": "python",
            "args": ["scripts/autofix.py"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "pytest",
            "args": ["-v", "--cov=src/autonomous_dev", "--cov-report=term-missing"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Lint with Ruff",
            "type": "shell",
            "command": "ruff",
            "args": ["check", ".", "--fix"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Format with Ruff",
            "type": "shell",
            "command": "ruff",
            "args": ["format", "."],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Type Check with mypy",
            "type": "shell",
            "command": "mypy",
            "args": ["src/autonomous_dev"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Pre-commit Hooks",
            "type": "shell",
            "command": "pre-commit",
            "args": ["run", "--all-files"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Dev Dependencies",
            "type": "shell",
            "command": "pip",
            "args": ["install", "-e", ".[dev]"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean Cache Files",
            "type": "shell",
            "command": "find . -type d -name '__pycache__' -o -name '.pytest_cache' -o -name '.mypy_cache' -o -name '.ruff_cache' | xargs rm -rf",
            "windows": {
                "command": "powershell",
                "args": ["-Command", "Get-ChildItem -Path . -Include __pycache__,.pytest_cache,.mypy_cache,.ruff_cache -Recurse -Force | Remove-Item -Recurse -Force"]
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
